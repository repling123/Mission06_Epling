@model IEnumerable<Mission06_Epling.Models.Movie>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Movie List";
}

<div class="container">
    <h2 class="my-4">Movie Collection</h2>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Year</th>
                <th>Edited</th>
                <th>Copied to Plex</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Title</td>
                    <td>@movie.Year</td>
                    <td>@(movie.Edited ? "Yes" : "No")</td>
                    <td>@(movie.CopiedToPlex ? "Yes" : "No")</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Movies" asp-route-id="@movie.MovieId" class="btn btn-primary btn-sm">Edit</a>

                        <form asp-action="Delete" asp-controller="Movies" asp-route-id="@movie.MovieId" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="AddMovie" asp-controller="Movies" class="btn btn-success mt-3 px-4 py-2 fw-bold shadow-sm rounded">➕ Add New Movie</a>

</div>
