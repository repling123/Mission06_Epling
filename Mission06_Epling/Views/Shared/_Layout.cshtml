<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Joel Hilton Film Collection</title>

    <link rel="stylesheet" href="~/css/site.css" />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="d-flex flex-column min-vh-100 text-center">
    <header class="bg-dark text-white py-3">
        <h1 class="text-center">The Joel Hilton Film Collection</h1>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link" asp-action="Index" asp-controller="Home">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-action="About" asp-controller="Home">Get to Know Joel</a></li>
                        <li class="nav-item"><a class="nav-link" asp-action="AddMovie" asp-controller="Movies">Add Movie</a></li>
                        <li class="nav-item"><a class="nav-link" asp-action="MovieList" asp-controller="Movies">Movie List</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container flex-grow-1">
        @RenderBody()
    </main>

    <footer class="mt-auto bg-dark text-white py-3">
        <p>&copy; 2025 Mission06_Epling | Created by Russell Epling</p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
